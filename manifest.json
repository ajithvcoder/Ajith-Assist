{
    "manifest_version": 3,
    "name": "Agentic Ajith Assist",
    "version": "1.0",
    "description": "AI-powered agentic assistant with multi-step reasoning",
    "permissions": [
      "scripting",
      "contextMenus",
      "activeTab",
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "http://localhost:8000/"
    ],
  
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["agentic-popup.css"]
    }
  ],
    "web_accessible_resources": [{
      "resources": ["agentic-popup.css"],
      "matches": ["<all_urls>"]
    }]
  }